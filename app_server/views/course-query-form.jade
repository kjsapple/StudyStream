extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add Your Query
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/course", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-sm-2.control-label(for="query") Query
          .col-sm-10
            textarea#query.form-control(name="query", rows="5")
        button.btn.btn-default.pull-right Add my query
    .col-xs-12.col-md-4